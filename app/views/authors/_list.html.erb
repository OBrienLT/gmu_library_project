<div id="authors">
<% authors.each do |author| %>
  <div class="row well">
    <div class="col-sm-2">
      <%= link_to(author) do %>
      <%= image_tag(author.image_url, size: "90x130", alt: author.name) %>
      <% end %>
    </div>
    <div class="col-sm-10">
      <h3><%= link_to(author.name, author) %></h3>
      <p>
      </p>
    </div>
  </div>
<% end %>
</div>

<div>
  <div class="pull-left page-entries-info">
  <%= page_entries_info authors %>
  </div>

  <div class="pull-right">
  <%= paginate authors %>
  </div>
</div>