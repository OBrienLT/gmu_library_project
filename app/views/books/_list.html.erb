<div id="books">
<% books.each do |book| %>
  <div class="row well">
    <div class="col-sm-2">
      <%= link_to(book) do %>
      <%= image_tag(book.image_cover_url) %>
      <% end %>
    </div>
    <div class="col-sm-10">
      <h3><%= link_to(book.title, book) %> <small>by <%= book.author.name %></small></h3>
      <p>
      </p>
    </div>
  </div>
<% end %>
</div>

<div>
  <div class="pull-left page-entries-info">
  <%= page_entries_info books %>
  </div>

  <div class="pull-right">
  <%= paginate books %>
  </div>
</div>