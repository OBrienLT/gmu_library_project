<%- model_class = User -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:admin) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, admin_path(user) %></td>
        <td><%= user.user_id %></td>
        <td><%= user.admin %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_admin_path(user), :class => 'btn btn-default btn-xs' %>
          <% if session[:user_id] != user.id %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      admin_path(user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td colspan="6">
        <%= paginate @users %>
      </td>
    </tr>
  </tbody>
</table>

<br>

<%= link_to new_admin_path, class: 'btn btn-default col-md-2' do %>
        <span class="pull-left glyphicon glyphicon-user"></span> New User
      <% end %>
