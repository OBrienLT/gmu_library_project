<%= form_for(@user, html:{class: 'form-horizontal'}) do |f| %>
	<div class="page-header">
	  <h2>Show User</h2>
	</div>
  <%= bootstrap_form_field(f, :name) do %>
    <%= f.text_field :name,:readonly => true, class: "form-control" %>
  <% end %>

  <%= bootstrap_form_field(f, :user_id) do %>
    <%= f.text_field :user_id, :readonly => true, class: "form-control" %>
  <% end %>

  <%= bootstrap_form_field(f, :admin) do %>
    <%= f.text_field :admin, :readonly => true, class: "form-control checkbox" %>
  <% end %>

  <p>
    <%= link_to edit_admin_path, class: 'btn btn-default col-md-1' do %>
		  <span class="pull-left glyphicon glyphicon-pencil"></span> &nbsp;Edit
		<% end %>
		<%= link_to 'Back', admins_path, class: 'btn btn-link' %>
  </p>
<% end %>