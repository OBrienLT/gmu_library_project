<%= form_for(@user, html:{class: 'form-horizontal'}) do |f| %>
  <%= render 'shared/errors', object: @user %>

  <%= bootstrap_form_field(f, :name) do %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  <% end %>

  <%= bootstrap_form_field(f, :user_id) do %>
    <%= f.text_field :user_id, class: "form-control" %>
  <% end %>

  <%= bootstrap_form_field(f, :admin) do %>
    <%= f.check_box :admin, class: "form-control checkbox" %>
  <% end %>

  <%= bootstrap_form_field(f, :password) do %>
    <%= f.password_field :password, class: "form-control" %>
  <% end %>

  <%= bootstrap_form_field(f, :password_confirmation) do %>
    <%= f.password_field :password_confirmation, class: "form-control" %>
  <% end %>
  <p>
    <%= f.submit class: 'btn btn-primary' %>
    <%= link_to 'Cancel', @user.id ? admin_path(@user) : admins_path, class: 'btn btn-link' %>
  </p>
<% end %>